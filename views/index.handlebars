<div class="container">
  <img class="img-fluid" src="assets\img\main-burger1.jpg">

  <h1 class="header">Eat the Burger</h1>

  <div class="row">
    <div class="col-4">
      <h2>To be devoured:</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-4 midDiv">
      <p align="center">Add burgers down below that you would like to devour!</p>
      <img src="assets\img\down-arrow.jpg" alt="">
    </div>
    <div class="col-4">
      <h2>Devoured:</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <br>
  <form id="create-form">
    <div class="form-group" align="center">
      <label for="burger" class="burgerLabel">Add a Burger:</label>
      <input type="text" id="burger" name="name">
      <button class="btn btn-success ml-3" type="submit">Add Burger</button>
    </div>
  </form>
</div>